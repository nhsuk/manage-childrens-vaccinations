<div class="nhsuk-card">
  <div class="nhsuk-card__content">
    <h2 class="nhsuk-card__heading nhsuk-heading-m">
      Medical history
    </h2>

    <% if @consent.health_questions.present? %>
      <details class="nhsuk-details nhsuk-expander">
        <summary class="nhsuk-details__summary">
          <span class="nhsuk-details__summary-text">
            Show answers
          </span>
        </summary>

        <div class="nhsuk-details__text">
          <%= render AppHealthQuestionsComponent.new(consents: [@consent]) %>
        </div>
      </details>
    <% end %>

    <% if @consent.triage_needed? %>
      <% if triage_present? %>
        <p>Triage needed</p>

        <ul class="nhsuk-list nhsuk-list--bullet">
          <% reasons_triage_needed.each do |reason| %>
            <li><%= reason %></li>
          <% end %>
        </ul>
      <% else %>
        <% if @triage.notes.present? %>
          <h2 class="nhsuk-heading-s nhsuk-u-margin-bottom-2">Triage notes</h2>
          <p><%= @triage.notes %></p>
        <% else %>
          <p>Triage complete - no notes</p>
        <% end %>
      <% end %>
    <% else %>
      <p>No triage needed</p>
    <% end %>
  </div>
</div>
