<% content_for :before_main do %>
  <%= render AppBacklinkComponent.new(
    href: previous_wizard_path,
    name: "#{@previous_step} page of session creation",
  ) %>
<% end %>

<% page_title = "Check and confirm details" %>

<%= h1 page_title %>

<%= render AppSessionDetailsComponent.new(session: @session) %>

<% if @session.send_consent_at.today? %>
  <%= govuk_inset_text do %>
    After clicking confirm, consent request emails will be sent immediately.
  <% end %>
<% end %>

<%= govuk_button_to "Confirm", wizard_path, method: :put %>
