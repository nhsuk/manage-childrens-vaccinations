<% if flash[:success].present? %>
  <%= render AppFlashSuccessComponent.new(flash[:success]) %>
<% end %>

<% content_for :before_main do %>
  <%= render AppBreadcrumbComponent.new(items: [
    { text: 'Home', href: dashboard_path },
    { text: 'School sessions', href: sessions_path },
    { text: @session.name, href: session_path(@session) },
  ]) %>
<% end %>

<h1>Record vaccinations</h1>

<%=
govuk_tabs title: "Vax" do |c|
  c.with_tab(label: "Action needed") do
    render "patients", filter: ->(a, o) { in_tab_action_needed?(a, o) }
  end
  c.with_tab(label: "Vaccinated") do
    render "patients", filter: ->(a, o) { in_tab_vaccinated?(a, o) }
  end
  c.with_tab(label: "Not vaccinated") do
    render "patients", filter: ->(a, o) { in_tab_not_vaccinated?(a, o) }
  end
end
%>
