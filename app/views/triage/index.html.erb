<% if flash[:success].present? %>
  <%= render AppFlashSuccessComponent.new(flash[:success]) %>
<% end %>

<% content_for :before_main do %>
  <%= render AppBreadcrumbComponent.new(items: [
    { text: 'Home', href: dashboard_path },
    { text: 'School sessions', href: sessions_path },
    { text: @session.name, href: session_path(@session) },
  ]) %>
<% end %>

<h1>Triage</h1>

<%=
govuk_tabs title: "Patient triage", classes: 'nhsuk-tabs' do |c|
  c.with_tab(label: "Needs triage", classes: 'nhsuk-tabs__panel') do
    render "patients_with_triage_reasons", filter: ->(a, o) { in_tab_needs_triage?(a, o) }
  end
  c.with_tab(label: "Triage complete", classes: 'nhsuk-tabs__panel') do
    render "patients_with_triage_reasons", filter: ->(a, o) { in_tab_triage_complete?(a, o) }
  end
  c.with_tab(label: "Get consent", classes: 'nhsuk-tabs__panel') do
    render "patients_with_dob", filter: ->(a, o) { in_tab_get_consent?(a, o) }
  end
  c.with_tab(label: "No triage needed", classes: 'nhsuk-tabs__panel') do
    render "patients_with_dob", filter: ->(a, o) { in_tab_no_triage_needed?(a, o) }
  end
end
%>
