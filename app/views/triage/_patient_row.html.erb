<tr class="nhsuk-table__row">
  <td class="nhsuk-table__cell">
    <%= link_to patient.full_name, session_patient_triage_path(session, patient), "data-testid": "child-link" %>
  </td>
  <td class="nhsuk-table__cell">
    <% if middle_column == :triage_reasons %>
      <ul class="nhsuk-list nhsuk-u-margin-bottom-2">
        <% patient_session.consent_response.reasons_triage_needed.map do |reason| %>
          <li><%= reason %></li>
        <% end %>
      </ul>
    <%
    else
    %>
      <%= patient.dob.to_fs(:nhsuk_date_short_month) %>
    <% end %>

  </td>
  <td class="nhsuk-table__cell" data-testid="child-action">
    <%=
    render(AppActionTagComponent.new(
      status: action_text_for_state(state),
      colour: action_colour_for_state(state)
    ))
    %>
  </td>
</tr>
